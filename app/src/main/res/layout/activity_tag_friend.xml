<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFriendToDB"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <EditText
        android:id="@+id/taggedFriendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Friend's Key To Tag"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/tagFriendButtonInTagActivity"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tagMyselfButton"
        android:background="@drawable/radius_pink"
        android:text="Tag Friend" />

    <Button
        android:id="@+id/tagMyselfButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius_pink"
        android:text="Tag Myself" />
</RelativeLayout>