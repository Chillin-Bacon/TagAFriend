<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tagafriend.Main2Activity">


    <Button
        android:id="@+id/currentFriends"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/optionsButton"
        android:layout_alignTop="@+id/untagButton"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-134dp"
        android:text="Current Friends" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="THIS IS GOING TO BE THE DISPLAYMAP ACTIVITY"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/displayMapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="346dp"
        android:text="Display Location" />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/displayMapsButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="31dp"
        android:text="Options" />

    <Button
        android:id="@+id/addFriendButton"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tagFriendButton"
        android:layout_alignStart="@+id/displayMapsButton"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="25dp"
        android:text="add friend" />

    <Button
        android:id="@+id/tagFriendButton"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/optionsButton"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-81dp"
        android:layout_marginBottom="202dp"
        android:text="tag friend" />

    <Button
        android:id="@+id/untagButton"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/displayMapsButton"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="135dp"
        android:text="untag me" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="61dp"
        android:text="ADD ITEM TO DB" />


</RelativeLayout>
