<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tagafriend.MainActivity"
    android:background="@drawable/login_bk_photo">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_sign_in"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/radius_darkteal"
        android:padding="16dp"
        android:text="TagAFriend"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"

        android:background="@drawable/radius_pink"
        android:onClick="Signin"
        android:text="SIGN IN"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_sign_in"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:onClick="Signup"
        android:text="SIGN UP"
        android:background="@drawable/radius_pink"
        android:textColor="#fff" />
</RelativeLayout>